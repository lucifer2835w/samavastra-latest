{
    "hosting": [
        {
            "target": "chalkboard",
            "public": "chalkboard-portal/dist",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "/api/**",
                    "function": "api"
                },
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "samavest",
            "public": "samavest-portal/dist",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "/api/**",
                    "function": "api"
                },
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "launcher",
            "public": "launcher",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        }
    ],
    "functions": [
        {
            "source": ".",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local",
                "chalkboard-portal",
                "samavest-portal"
            ],
            "predeploy": [
                "npm run build"
            ]
        }
    ]
}